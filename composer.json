{
	"require": {
		"monolog/monolog": "1.0.*",
		"twig/twig": "^2.7",
		"components/jquery": "3.3.*",
		"twbs/bootstrap": "^4.3",
		"happyworm/jplayer": "^2.9",
		"desandro/masonry": "^4.2",
		"leafo/lessphp": "^0.5.0",
		"matthiasmullie/minify": "^1.3",
		"nolimits4web/swiper": "^4.5",
		"mobiledetect/mobiledetectlib": "^2.8"
	},
	"config": {
		"component-dir": "assets/"
	},
	"autoload": {
		"classmap": [
			"vendor/leafo/lessphp/lessc.inc.php",
			"extensions/Widgets.php",
			"src/mobiledetect/Mobile_Detect.php"
		],
		"psr-4": {
			"GoMovil\\":"src/",
			"MatthiasMullie\\Minify\\": "src/minify/src/",
			"MobileDetect\\":"src/mobiledetect/"
		}
	},
	"scripts": {
		"post-update-cmd": [
			"chmod -R 755 assets",
			"chmod -R 755 css",
			"rm -rf assets/bootstrap",
			"cp -R vendor/twbs/bootstrap/dist assets/bootstrap",
			"rm -rf assets/masonry",
			"cp -R vendor/desandro/masonry/dist assets/masonry",
			"cp -R vendor/matthiasmullie/minify/data src/minify",
			"cp -R vendor/matthiasmullie/minify/src src/minify",
			"cp -R vendor/mobiledetect/mobiledetectlib src/mobiledetect",
			"php composer dump-autoload",
			"sh gomovil-install.sh"
		]
	}
}