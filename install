#!/bin/bash/php
echo '+--------------------------------------------------+'
echo '| Installing Software...                           |'
echo '+--------------------------------------------------+'
echo '| 1) Downloading composer...                       |'
php -r "copy('https://getcomposer.org/installer', 'composer-setup.php');"
php -r "if (hash_file('sha384', 'composer-setup.php') === '48e3236262b34d30969dca3c37281b3b4bbe3221bda826ac6a9a62d6444cdb0dcd0615698a5cbe587c3f0fe57a54d8f5') { echo 'Installer verified'; } else { echo 'Installer corrupt'; unlink('composer-setup.php'); } echo PHP_EOL;"
php composer-setup.php
php -r "unlink('composer-setup.php');"
echo '| 2) Installing PHP Composer...                    |'
php composer install
echo '|                                                  |'
echo '+--------------------------------------------------+'
echo '| Installation ended successfully                  |'
echo '+--------------------------------------------------+'
echo '| We are going to configure the platform           |'
echo '| IMPORTANT: te information that you include it is |'
echo '| going to be write and you can not modify         |'
read -ep '| Database Username: ' dbUsername;
read -ep '| Database Password: ' dbPassword;
read -ep '| Database Name: ' dbName;
read -ep '| Database Host: ' dbHost;
echo '| System creating your new platform. Please wait   |'
php  'install-config.php' -- $dbUsername'&'$dbPassword'&'$dbName'&'$dbHost
echo '| Creating your connection database....            |'
echo '| Loading platform....                             |'
echo '|                                                  |'
echo '| Platform install ended successfully              |'
echo '+--------------------------------------------------+'